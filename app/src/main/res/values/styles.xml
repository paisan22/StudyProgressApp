<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomInputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColorHint">@color/color_text</item>
        <item name="hintTextAppearance">@color/color_text</item>
        <item name="boxBackgroundColor">@color/color_text_background</item>
    </style>

    <style name="CustomInputTextEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textColorHint">@color/color_text</item>
        <item name="hintTextAppearance">@color/color_text</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textSize">24dp</item>
    </style>

</resources>
